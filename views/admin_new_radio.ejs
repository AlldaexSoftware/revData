<%- include('partials/header', { active: 'radios' }) %>

<section class="space-y-6 max-w-lg">
  <h1 class="text-xl font-bold">Nueva Emisora</h1>
  <% if (error) { %>
    <div class="px-3 py-2 rounded bg-red-600/20 border border-red-500/30 text-xs text-red-200"><%= error %></div>
  <% } %>
  <form method="post" class="space-y-5">
    <label class="block space-y-1">
      <span class="text-xs uppercase tracking-wide text-slatefx-400/60">Ciudad</span>
      <input name="city" value="<%= form.city %>" class="w-full px-3 py-2 rounded bg-base-800/70 border border-base-700/60 text-sm" required />
    </label>
    <label class="block space-y-1">
      <span class="text-xs uppercase tracking-wide text-slatefx-400/60">Nombre Emisora</span>
      <input name="name" value="<%= form.name %>" class="w-full px-3 py-2 rounded bg-base-800/70 border border-base-700/60 text-sm" required />
    </label>
    <label class="block space-y-1">
      <span class="text-xs uppercase tracking-wide text-slatefx-400/60">URL Playlist</span>
      <input name="url" value="<%= form.url %>" class="w-full px-3 py-2 rounded bg-base-800/70 border border-base-700/60 text-sm" required />
    </label>
    <label class="inline-flex items-center gap-2 text-xs">
      <input type="checkbox" name="active" <%= form.active ? 'checked' : '' %> />
      Activa
    </label>
    <div class="flex gap-3">
      <button class="px-5 py-2 rounded bg-accent-500 text-base-900 text-sm font-semibold">Guardar</button>
      <a href="/admin/radios" class="px-5 py-2 rounded bg-base-700 text-sm">Cancelar</a>
    </div>
  </form>
</section>

<%- include('partials/footer') %>